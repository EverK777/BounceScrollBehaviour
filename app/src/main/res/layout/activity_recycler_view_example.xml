<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerViewExample">


    <TextView
        android:id="@+id/tittle_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#141414"
        android:text="Horizonal"
        />
    <com.ever777.bouncingscroll.BouncingRecyclerView
        android:id="@+id/horizontalRecycler"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tittle_horizontal"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tittle_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#141414"
        android:layout_below="@id/horizontalRecycler"
        android:text="Horizonal"
        />

    <com.ever777.bouncingscroll.BouncingRecyclerView
        android:id="@+id/verticalRecycler"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tittle_vertical"
        android:layout_height="wrap_content"/>

</RelativeLayout>